table
    width: 100%
    tr
        border-top: solid 1px #bbb
        font-size: 18px
        line-height: 1.2
        td
            padding: 10px

#publication-details
    line-height: 120%
    margin-content(5px)
    font-size: 18px        
    ul
        margin-left: 15px
        margin-bottom: 30px            
        li
            font-size: 20px
            margin-bottom: 10px
            padding-left: 15px
    li:before
        content:''
        display:inline-block 
        height:12px 
        width:12px
        background-image:url('/img/logo.svg') 
        background-size:contain
        background-repeat:no-repeat
        padding-left: 10px

