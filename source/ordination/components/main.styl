#ordination-container
    margin-content(20px)
    margin-top: 30px
    margin-bottom: 70px
    p   
        line-height: 1.2
        font-size: 20px
        text-align: center
        margin-top: 30px
        margin-bottom: 0
        @media desktopscreen
            width: 500px
            margin-left: auto
            margin-right: auto
    p.top-line
        display: block
        margin: auto
        font-size: 23px
        text-align: center
        margin-top: 50px
        margin-bottom: 40px
        padding-bottom: 20px
        border-bottom: solid 1px garyred
        @media desktopscreen
            width: calc(100% - 320px)
            font-size: 27px
            padding-left: 160px
            padding-right: 140px
            
    .spacer
        height: 40px
        width: 100%
        centered-background("/img/logo.svg")
        margin: 30px auto

    #google-maps-frame
        display block
        position relative
        width: 100%
        height: 400px
        margin-top: 60px
        background-image: url("/img/drgary-map.png")
        background-size: cover
        background-position center
    #google-maps-address-frame
        position absolute
        top 20px
        left 20px
        max-width: 240px
        padding 10px
        box-sizing: border-box
        background-color white
        box-shadow 0 0 5px 0 alpha(black, 0.5)
        h3
            font-family: "Museo Sans 500"
            font-size 13pt
        p
            margin-top 10px
            margin-bottom 20px
            font-size: 11pt
            color #777
            width auto
            text-align: left
            white-space: wrap
            word-break: normal

    button
        display: block 
        margin: auto
        margin-top: 30px
    a
        color: #2e2e2e
        word-break: break-all
#imageGallery
    display: flex
    justify-content: space-around
    flex-wrap: wrap
    width: (100% - 2px)
    height: 800px
    @media desktopscreen
        height: 1231px
    a
        overflow: hidden
        .preview
            transition: transform 0.5s ease
            height: 100%
            width: 100%
            background-position: center
            background-size: cover
            cursor: pointer
    a:hover
        .preview
            transform: scale(1.2)
    #list-item1
        height: 200px
        width: 60%
        @media desktopscreen
            height: 300px
    #list-item2
        height: 200px
        width: 40%
        @media desktopscreen
            height: 300px
