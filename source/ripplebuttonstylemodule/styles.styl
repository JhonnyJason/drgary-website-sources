/*==========================================================
Ripple Button
==========================================================*/
button
    cursor: pointer;
    position: relative;
    overflow: hidden;

button:after //for ripple effect
    content: '';
    position: absolute
    top: 50%
    left: 50%
    width: 7px
    height: 7px
    background: rgba(255, 255, 255, .5);
    opacity: 0;
    border-radius: 50%;
    transform: scale(1, 1) translate(-50%);
    transform-origin: 50% 50%;

button:focus:not(:active)::after //!! WTF is this selector xD!!
    animation: ripple 1s ease-out

/*==========================================================
Ripple Animation
==========================================================*/
@-webkit-keyframes ripple
    0%
        transform: scale(0, 0);
        opacity: 1;
    20%
        transform: scale(25, 25);
        opacity: 1;
    100%
        opacity: 0;
        transform: scale(100, 100);

@keyframes ripple
    0%
        transform: scale(0, 0);
        opacity: 1;
    20%
        transform: scale(25, 25);
        opacity: 1;
    100%
        opacity: 0;
        transform: scale(100, 100);
