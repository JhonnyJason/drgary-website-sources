/*==========================================================
Ripple Button
==========================================================*/
button {
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

button:after {//for ripple effect
  content: '';
  position: absolute
  top: 50%
  left: 50%
  width: 7px
  height: 7px
  background: rgba(255, 255, 255, .5);
  opacity: 0;
  border-radius: 50%;
  transform: scale(1, 1) translate(-50%);
  transform-origin: 50% 50%;
}

button:focus:not(:active)::after { //!! WTF is this selector xD!!
  animation: ripple 1s ease-out;
}

button.contact-link 
    background-color: garyred
    text-transform: uppercase
    color: white
    // background-image: url("/img/logo_white.svg")
    background-size: contain
    background-repeat: no-repeat
    background-position-x: 0
    background-position-y: center
    padding: 5px
    // padding-left: 30px
    // border-radius: 10px
    border: solid 15px garyred


/*==========================================================
Ripple Animation
==========================================================*/
@-webkit-keyframes ripple
    0%
        transform: scale(0, 0);
        opacity: 1;
    20%
        transform: scale(25, 25);
        opacity: 1;
    100%
        opacity: 0;
        transform: scale(100, 100);

@keyframes ripple
    0%
        transform: scale(0, 0);
        opacity: 1;
    20%
        transform: scale(25, 25);
        opacity: 1;
    100%
        opacity: 0;
        transform: scale(100, 100);
