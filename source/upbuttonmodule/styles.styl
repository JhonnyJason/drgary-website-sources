/*==========================================================
Upbutton
==========================================================*/
#upbutton
    color white
    cursor pointer
    position: fixed
    right: 30px
    bottom: -50px
    width: 40px
    height: 40px
    background-color: alpha(black, 0.4)
    z-index: 200

#upbutton:hover
    svg
        -webkit-animation-name: upwards
        animation-name: upwards
        -webkit-animation-duration: 0.5s
        animation-duration: 0.5s

#upbutton.shown
    bottom: 30px
    transition: bottom 0.5s ease-in

/*==========================================================
Upwards Animation
==========================================================*/
@-webkit-keyframes upwards
    0%
        transform translateY(0)
    50%
        transform translateY(-8px)
    100%
        transform translateY(0)

@keyframes upwards
    0%
        transform translateY(0)
    50%
        transform translateY(-8px)
    100%
        transform translateY(0)
