#services-container
    padding-top: 50px
    .large-block-background:nth-child(2n)
        background-color rgba(222,222,222,0.7)
    .large-block-background
        width: 100%
        padding-bottom: 40px
        padding-top: 70px
    h2
        color: garyred
        font-size: 30px
        margin-bottom: 45px
        padding-left: 5px
        padding-right: 5px
        @media desktopscreen
            padding-left: 0
            padding-right: 0    
        .chapter-number
            display: none
            width: 45px
            vertical-align: top
        .chapter-text
            display: inline-block
            width: calc(100% - 10px)
            @media desktopscreen 
                width: 100% 
    .services-block
        width: calc(100% - 17px)
        margin-left: 5px
        margin-right: 5px
        margin-bottom: 60px
        border-left: 7px solid garyred
        h3
            margin-top: 40px
            margin-bottom: 30px
            margin-left: 20px
            font-size: 20px
            color: #000
        p
            margin-left: 20px
            margin-right: 10px
            font-size: 16px
            line-height: 1.3
            margin-bottom: 15px
            text-align: justify

        ul
            width: calc(100% - 30px)
            margin-left: 15px
            margin-bottom: 20px            
            li
                font-size: 16px
                margin-bottom: 10px
                padding-left: 15px
                word-wrap: break-word
                .li-inner
                    float: right
                    width: calc(100% - 23px)
        li:before
            content:''
            display:inline-block 
            height:12px 
            width:12px
            background-image:url('/img/logo.svg') 
            background-size:contain
            background-repeat:no-repeat
            padding-left: 10px
    button
        display:block
        margin-top: 90px
        margin-bottom: 100px
        margin-left: auto
        margin-right: auto
        font-size: 14px
        border-radius: 0
        text-transform: uppercase
        border: solid 15px garyred


